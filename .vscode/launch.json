{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Odoo: Debug",
            "type": "python",
            "request": "attach",
            "port": 8888,
            "host": "localhost",
            "preLaunchTask": "debug-odoo",
            "postDebugTask": "re-run-odoo",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/opt/odoo",
                }
            ],
        }
    ]
}